@model PassionProjectN01661067.Models.ProductDto

@{
    ViewBag.Title = "DeleteConfirm";
}



<div>
    <h2>Are you sure you want to delete this Product?</h2>
    <div>
        <div>
            <h3>@Model.ProductName</h3>
            <div>
                <div>
                    <form action="/Product/Delete/@Model.ProductId" method="POST" style="display:inline;">
                        <input type="submit" value="Confirm Delete"/>
                    </form>
                    <a href="/Product/List">Cancel</a>
                </div>
            </div>
        </div>
</div>
