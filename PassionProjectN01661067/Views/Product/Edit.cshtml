@model PassionProjectN01661067.Models.ProductDto

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Product</h2>

<form method="POST" action="/Product/Update/@Model.ProductId">
    <input type="text" style="display:none;" name="ProductId" value="@Model.ProductId" />
    <div>
        <label>Product Name:</label>
        <input type="text" name="ProductName" value="@Model.ProductName" />
    </div>
    <div>
        <label>Product Price:</label>
        <input type="number" name="ProductPrice" value="@Model.ProductPrice" />
    </div>
    <div>
        <label>Stock Quantity:</label>
        <input type="number" name="StockQuantity" value="@Model.StockQuantity" />
    </div>
    <div>
        <label>No Of Transactions:</label>
        <input type="number" name="NoOfTransactions" value="@Model.NoOfTransactions" />
    </div>
    <div>
        <label>Supplier Id:</label>
        <input type="number" name="SupplierId" value="@Model.SupplierId" />
    </div>


    <div>

        <input type="submit" value="Update" />
    </div>

</form>

