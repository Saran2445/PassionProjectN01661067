@model IEnumerable<PassionProjectN01661067.Models.ProductDto>
@{
    ViewBag.Title = "List";
}

<h2>List Products</h2>


 <div><h1>Inventory System</h1>
    <nav>
        <a href="/Home">Home</a>
        <a href="/Product/List">Products</a>
        <a href="/Campaigns">Suppliers</a>
    </nav>
    <h2>Product List</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Stock Quantity</th>
                <th>No Of Transactions</th>
                <th>Supplier ID</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.ProductName</td>
                    <td>@product.ProductPrice</td>
                    <td>@product.StockQuantity</td>
                    <td>@product.NoOfTransactions</td>
                    <td>@product.SupplierId</td>
                    <td>
                        <a href="/Product/Show/@product.ProductId">Details</a>
                        <a href="/Product/Edit/@product.ProductId">Edit</a>
                        <a href="/Product/DeleteConfirm/@product.ProductId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Product/New">Add New Product</a>
</div>
